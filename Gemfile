source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.1'

# Grape API
gem 'grape'
gem 'grape-entity'

# Swagger API doc
gem 'grape-swagger'
gem 'grape-swagger-rails'

# Database
gem 'pg'

# Mongo
gem 'mongoid'
gem 'bson'

# User auth
gem 'devise'

# Enums
gem 'enumerate_it'

# RabbitMQ
gem 'bunny'

# Global configs
gem 'global'

group :development, :test do
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'

  # Testing
  gem 'rspec'
  gem 'rspec-rails'
  gem 'rack-test'
  gem 'factory_girl_rails', '~> 4.0'

  # Model Sanity
  gem 'annotate'

  # Seeding information
  gem 'faker'
end
