source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.1'

# Grape API
gem 'grape'
gem 'grape-entity'

# Swagger API doc
gem 'grape-swagger'
gem 'grape-swagger-rails'

# Database
gem 'pg'

# User auth
gem 'devise'

# Enums
gem 'enumerate_it'

# RabbitMQ
gem 'bunny'

# Global configs
gem 'global'

group :development, :test do

  # Spring
  gem 'spring'

  # Model Sanity
  gem 'annotate'

  # Seeding information
  gem 'faker'
end

group :test do

    # Rspec
    gem 'rspec'
    gem 'rspec-rails'
    gem 'rack-test'

    # Model factories
    gem 'factory_girl_rails', '~> 4.0'
end
